<h2>Alignment Classification</h2>
<h3>Input</h3>
<section id="submit">
  <form action="/" method="post">
    <textarea cols="100" rows="20" name="content" placeholder="Your data&hellip;"><% if !@content.empty? %><%= @content %><% end %></textarea>
    </br>
    <input type="submit" value="Run">
  </form>
</section>

<h3>Output</h3>
<div>
<% @data_output.each do |phase, values|%>
  <% values.each_with_index do |alg, index|%>
    <table style="border: 1px solid black;border-collapse: collapse;
      <%if index < (values.length - 1)%> 
      <%= 'float: left;'%>
      <%end%>
    ">
      <tr>
        <td style="border: 1px solid black;border-collapse: collapse;">
          <%= alg[0]%>
        </td>
      </tr>
      <tr>
        <td style="border: 1px solid black;border-collapse: collapse;">
          <%= alg[1]%>
        </td>
      </tr>
      <tr>
        <td style="border: 1px solid black;border-collapse: collapse;">
          <%= alg[2]%>
        </td>
      </tr>
    </table>
  <%end%>
  <br>
  <br>
<%end%>
</div>